<Window x:Class="WpfApplication2.UriWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApplication2"
        mc:Ignorable="d"
        Title="UriWindow" Height="300" Width="300">
    <DockPanel>
        <StackPanel DockPanel.Dock="Top">
            <GroupBox Header="Absolute Pack URIs">
                <StackPanel>
                    <Frame Source="pack://application:,,,/Page1.xaml" />
                    <Frame Source="pack://application:,,,/Page2.xaml" NavigationUIVisibility="Visible"/>
                </StackPanel>
            </GroupBox>
        </StackPanel>
    </DockPanel>
</Window>
