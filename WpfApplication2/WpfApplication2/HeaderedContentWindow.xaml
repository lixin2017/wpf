<Window x:Class="WpfApplication2.HeaderedContentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApplication2"
        mc:Ignorable="d"
        Title="HeaderedContentWindow" Height="300" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        <GroupBox Header="GroupBox" Height="100" VerticalAlignment="Top">
            <StackPanel>
                <TextBlock>Text</TextBlock>
                <Image Source="Images/示例图片.bmp" Height="50"></Image>
            </StackPanel>
        </GroupBox>
        <Expander Grid.Row="1">
            <StackPanel>
                <TextBlock>Text</TextBlock>
                <Image Source="Images/示例图片.bmp" Height="50"></Image>
            </StackPanel>
        </Expander>
        
    </Grid>
</Window>
